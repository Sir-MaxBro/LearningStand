<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:UserControls="clr-namespace:EditorXML.UserControls"
        x:Class="EditorXML.MainWindow"
        Title="XMLEditor" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="43*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Menu VerticalAlignment="Center" Grid.ColumnSpan="2" >
            <MenuItem Header="Файл">
                <MenuItem Header="Новый" Click="New_MenuItem_Click"/>
                <MenuItem Header="Открыть" Click="MenuItem_Open_Click"/>
            </MenuItem>
            <MenuItem Header="Сохранить" Click="Save_MenuItem_Click"/>
        </Menu>
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <StackPanel >
                <StackPanel x:Name="Container" Orientation="Horizontal" >
                    
                </StackPanel>
              
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>

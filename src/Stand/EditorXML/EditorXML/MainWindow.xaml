<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:UserControls="clr-namespace:EditorXML.UserControls"
    x:Class="EditorXML.MainWindow"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="43*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Menu VerticalAlignment="Center" Grid.ColumnSpan="2" >
            <MenuItem Header="File" >
                <MenuItem Header="New" Click="MenuItem_new_Click"/>
                <MenuItem Header="Open" Click="MenuItem_open_Click"/>
            </MenuItem>
            <MenuItem Header="Save" Click="MenuItem_Click"/>
        </Menu>
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"  HorizontalScrollBarVisibility="Auto">
        <StackPanel >
        <StackPanel x:Name="Container" >
            </StackPanel>
            <Button Background="Green" Content="add" Click="Button_Click"></Button>
        </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>

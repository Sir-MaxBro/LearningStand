<Window x:Class="Stand.UI.Windows.BrowserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stand.UI.Windows"
        mc:Ignorable="d"
        Title="BrowserWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <TextBox Width="200" KeyUp="TextBox_KeyUp" Text="{Binding Path=CurrentUrl}"></TextBox>
            <Button Grid.Row="2" Grid.ColumnSpan="2"
                Style="{StaticResource StandartButton}"
                Background="{DynamicResource greenGradient}"
                BorderThickness="1"
                BorderBrush="{DynamicResource grayBrush}"
                Margin="5, 10, 5, 10"
                Content="Connect"
                Click="OnSubmit_ButtonClick"
                    Width="100"></Button>
        </StackPanel>
        <WebBrowser Grid.Row="1"  x:Name="Browser"></WebBrowser>
    </Grid>
</Window>

<Window x:Class="Stand.UI.Windows.ProtocolWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор протокола" Height="200" Width="150"
        WindowStyle="ToolWindow" ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80*"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Name="protocolsStackPanel">
            <RadioButton IsChecked="True" Tag="telnet">Telnet</RadioButton>
            <!--<RadioButton Tag="ssh">SSH</RadioButton>-->
        </StackPanel>
        <Button Style="{StaticResource StandartButton}" 
                Grid.Row="1" Click="DialogResult_ButtonClick"
                Background="{DynamicResource greenGradient}"
                BorderThickness="1"
                BorderBrush="{DynamicResource grayBrush}">Принять</Button>
    </Grid>
</Window>

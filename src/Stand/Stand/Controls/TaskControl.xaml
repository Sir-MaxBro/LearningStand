<UserControl x:Class="Stand.UI.Controls.TaskControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"
             d:DesignHeight="40" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Label x:Name="markerLabel"
               HorizontalContentAlignment="Center" 
               VerticalContentAlignment="Center"
               VerticalAlignment="Center" 
               HorizontalAlignment="Center"
               FontSize="20" Margin="0"
               FontWeight="Bold"
               Foreground="{Binding TextColor, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"></Label>

        <TextBlock x:Name="taskTextBox" 
                   Text="{Binding Description}" 
                   Foreground="{Binding TextColor, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                   FontSize="14" FontWeight="Normal" Grid.Column="1"
                   VerticalAlignment="Center"
                   TextWrapping="Wrap"></TextBlock>
    </Grid>
</UserControl>

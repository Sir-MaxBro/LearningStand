<UserControl x:Class="Stand.UI.Controls.Terminal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <TextBox Name="terminal"  Style="{StaticResource TerminalTextBox}" AcceptsReturn="False" TextWrapping="NoWrap"
             PreviewKeyDown="Terminal_PreviewKeyDown"
             PreviewTextInput="Terminal_PreviewTextInput"
             BorderThickness="0">
        <TextBox.CommandBindings>
            <CommandBinding Command="ApplicationCommands.Paste"
                        CanExecute="CommandBinding_CanExecutePaste"></CommandBinding>
            <CommandBinding Command="ApplicationCommands.Copy"
                        CanExecute="CommandBinding_CanExecuteCopy"></CommandBinding>
            <CommandBinding Command="ApplicationCommands.Cut"
                        CanExecute="CommandBinding_CanExecuteCut"></CommandBinding>
        </TextBox.CommandBindings>
    </TextBox>
</UserControl>

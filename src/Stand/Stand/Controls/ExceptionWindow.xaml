<Window x:Class="Stand.UI.Windows.ExceptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ошибка" Height="175" Width="300" Loaded="Window_Loaded"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"></ColumnDefinition>
            <ColumnDefinition Width="56*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"></RowDefinition>
            <RowDefinition Height="4*"></RowDefinition>
        </Grid.RowDefinitions>
        <Image Source="/Stand.UI;component/icon2.ico" HorizontalAlignment="Left" VerticalAlignment="Top" OpacityMask="#FFB00303" Stretch="Fill" Height="50" Width="50" />
        <TextBlock Text="{ Binding ExceptionText}" TextWrapping="Wrap" 
                   Grid.Row="1"  IsEnabled="False" Grid.ColumnSpan="2" 
                   ClipToBounds="True" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Label Content="{Binding TimeLeft}" x:Name="timerLeft" 
               VerticalAlignment="Top" Grid.Column="1" FontSize="25" 
               HorizontalAlignment="Right"></Label>
    </Grid>
</Window>

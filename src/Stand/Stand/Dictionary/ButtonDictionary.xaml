<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="StandartButton" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="{StaticResource ControlsBackground}"></Setter>
        <Setter Property="BorderBrush" Value="{StaticResource ControlsBorderBrush}"></Setter>
        <Setter Property="Foreground" Value="#fff"></Setter>
        <Setter Property="BorderThickness" Value="2"></Setter>
        <Setter Property="Margin" Value="5"></Setter>
        <Setter Property="Cursor" Value="Hand"></Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Foreground" Value="#000"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="DeviceSelectButton" TargetType="Button" BasedOn="{StaticResource StandartButton}">
        <Setter Property="BorderThickness" Value="0, 0, 0, 5"></Setter>
        <Setter Property="BorderBrush" Value="#000000"></Setter>
        <Setter Property="Margin" Value="0"></Setter>
        <Setter Property="Padding" Value="10, 35, 10, 2"></Setter>

    </Style>

</ResourceDictionary>